[Unit]
Description=Cloudflare Tunnel for Agent Gigs MVP
After=network.target

[Service]
Type=simple
EnvironmentFile=/root/.openclaw/workspace/secrets/cloudflared-agent-gigs.env
ExecStart=/usr/local/bin/cloudflared tunnel --no-autoupdate run --token ${CF_TUNNEL_TOKEN}
Restart=on-failure
RestartSec=2

# Hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
